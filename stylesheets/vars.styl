.bitmap
  font-family 'icomoon'
  speak none
  font-weight normal
  line-height 1.2em
  font-smoothing antialiased
  text-transform uppercase
  color $color-beige
  letter-spacing .1em
  &.shadow
    color #ffd05a
    text-shadow 0 .06em 0 #876b2a

.icon[data-icon]:before
  font-family 'icomoon'
  content attr(data-icon)
  speak none
  font-weight normal
  line-height 1
  font-smoothing antialiased

.icon.timebomb:before
  content "\23"

.icon.extralife:before
  content "\24"

